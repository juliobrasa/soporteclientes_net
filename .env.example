# Archivo de ejemplo de configuración
# Copiar a .env.local y configurar con valores reales

# Base de datos
DB_HOST=localhost
DB_NAME=reviews_database
DB_USER=database_user
DB_PASS=your_secure_password
DB_PORT=3306
DB_CHARSET=utf8mb4

# Aplicación
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=storage/logs/app.log

# Paths
BACKUP_PATH=backups
TEMP_PATH=/tmp

# API Externa (opcional)
APIFY_API_TOKEN=your_apify_token_here
EXTERNAL_API_KEY=your_api_key_here

# Cache y Sesiones
CACHE_DRIVER=file
CACHE_PATH=storage/cache
SESSION_DRIVER=file
SESSION_PATH=storage/sessions

# Timezone
APP_TIMEZONE=UTC