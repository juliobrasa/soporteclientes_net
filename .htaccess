# =============================================================================
# CONFIGURACI�N DE SEGURIDAD PRINCIPAL - SOPORTECLIENTES.NET
# =============================================================================

# Proteger archivos de configuraci�n cr�ticos
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny 
    Deny from all
</Files>

<Files "composer.*">
    Order allow,deny
    Deny from all
</Files>

# Proteger archivos PHP sensibles
<FilesMatch "\.(bak|backup|sql|dump|config|conf)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger directorios sensibles
RedirectMatch 403 ^/\.git
RedirectMatch 403 ^/storage/logs
RedirectMatch 403 ^/storage/backups
RedirectMatch 403 ^/vendor
RedirectMatch 403 ^/node_modules

# Proteger scripts de desarrollo/debug
<FilesMatch "(debug|test|dev|temp|repair|update|install|setup|migrate|fix)-.*\.php$">
    Order allow,deny
    Deny from all
    # Excepciones para admin autenticado
    SetEnvIf Cookie "admin_session=" admin_authenticated
    Allow from env=admin_authenticated
</FilesMatch>

# Permitir admin-debug-logs.php (página del panel admin)
<Files "admin-debug-logs.php">
    Order allow,deny
    Allow from all
</Files>

# Headers de seguridad
<IfModule mod_headers.c>
    # Prevenir XSS
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    
    # CSP manejado por archivos PHP específicos - ver csp-config.php
    # Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; object-src 'none'; base-uri 'self'"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS restrictivo para APIs (solo admin panel)
    Header always set Access-Control-Allow-Origin "https://soporteclientes.net"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-Admin-Session"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>

# Prevenir acceso directo a archivos PHP sensibles
RewriteEngine On

# Redireccionar www a no-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Proteger contra inyecci�n SQL en URLs
RewriteCond %{QUERY_STRING} [^a-zA-Z0-9_\-=&\.] [OR]
RewriteCond %{QUERY_STRING} (union|select|insert|drop|delete|update|create|alter|exec|script) [NC]
RewriteRule .* - [F,L]

# Bloquear user agents maliciosos
RewriteCond %{HTTP_USER_AGENT} (sqlmap|nmap|nikto|scanner|crawler) [NC]
RewriteRule .* - [F,L]

# Limitar tama�o de request
LimitRequestBody 10485760

# Prevenir hotlinking
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://soporteclientes\.net [NC]
RewriteRule \.(jpg|jpeg|png|gif|ico|css|js)$ - [F,L]

# Cache para recursos est�ticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month" 
    ExpiresByType image/png "access plus 6 months"
    ExpiresByType image/jpg "access plus 6 months"
    ExpiresByType image/jpeg "access plus 6 months"
    ExpiresByType image/gif "access plus 6 months"
    ExpiresByType image/ico "access plus 1 year"
</IfModule>

# Compresi�n GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# P�ginas de error personalizadas
ErrorDocument 403 /error-403.html
ErrorDocument 404 /error-404.html
ErrorDocument 500 /error-500.html

# Configuraci�n PHP de seguridad
<IfModule mod_php.c>
    # Ocultar versi�n de PHP
    php_flag expose_php off
    
    # Deshabilitar funciones peligrosas
    php_admin_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"
    
    # L�mites de memoria y tiempo
    php_value memory_limit 256M
    php_value max_execution_time 60
    php_value max_input_time 30
    php_value post_max_size 10M
    php_value upload_max_filesize 5M
</IfModule>